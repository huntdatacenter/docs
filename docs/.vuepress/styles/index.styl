/* Hide external repository in regular navbar */
.nav-links .repo-link {
  display: none;
}

/* Hide navbar in sidebar. Only works in build, https://github.com/vuejs/vuepress/issues/1099 */
.sidebar .nav-links {
  display: none;
}

.custom-homepage {
  .last-updated {
    display: none !important;
  }
}

.theme-container.custom-page-class {
  height: calc(100dvh - 3.6rem) !important;

  .page {
    padding-bottom: 0px !important;
    height: 100%;

    .theme-default-content {
      height: 100%;
    }
  }
}

.h-100 {
  height: 100%;
}

.w-100 {
  width: 100%;
}

.custom-block.details {
  display: block;
  position: relative;
  border-radius: 2px;
  margin: 1.6em 0;
  padding: 1.6em;
  background-color: #eee;
}
.custom-block.details h4 {
  margin-top: 0;
}
.custom-block.details figure:last-child {
  padding-bottom: 0;
}
.custom-block.details p:last-child {
  padding-bottom: 0;
}
.custom-block.details summary {
  font-weight: bold;
  outline: none;
  cursor: pointer;
}
.customiframe {
  position: absolute;
  overflow: hidden;
  overflow-y: hidden;
  height: 110%;
  width: 100%;
  width: 860px;
  top: 150px;
  left: 0px;
  right: 0px;
  bottom: 50px;
  margin: 0 auto;
  padding-left: 320px;
}
