.custom-block
  &.expander
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color #eee
    h3
      margin-top 0
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      font-weight bold
      outline none
      cursor pointer

.custom-block.expander {
  summary:hover .header-anchor {
    opacity: 1;
  }
}

.glow {
  animation: highlight 3s;
}

@keyframes highlight {
  0% {
    box-shadow: 0 0 10px -7px rgba(235, 240, 196, 0);
  }
  20% {
    box-shadow: 0 0 10px -7px rgba(235, 240, 196, 0);
  }
  30% {
    box-shadow: 0 0 10px 7px rgba(235, 240, 196, 0.9);
  }
  40% {
    box-shadow: 0 0 10px 7px rgba(235, 240, 196, 0.5);
  }
  50% {
    box-shadow: 0 0 10px 7px rgba(235, 240, 196, 0.9);
  }
  60% {
    box-shadow: 0 0 10px 7px rgba(235, 240, 196, 0.5);
  }
  100% {
    box-shadow: 0 0 10px -7px rgba(235, 240, 196, 0);
  }
}

