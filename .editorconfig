[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,json,md}]
trim_trailing_whitespace = true

# Indentation override for all JS under docs directory
[docs/**.js]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
trim_trailing_whitespace = false
